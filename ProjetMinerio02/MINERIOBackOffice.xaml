<Page x:Class="ProjetMinerio02.MINERIOBackOffice"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ProjetMinerio02"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="MINERIOBackOffice">
    
    <Grid x:Name="grid" Background="Transparent"
            Width="600" Height="600" 
            KeyDown="KeyIsDown" 
            KeyUp="KeyIsUp" 
            Focusable="True"
            MouseWheel="RouletteSouris">
        <Grid.RenderTransform>
            <TranslateTransform x:Name="gridTranslation"/>
        </Grid.RenderTransform>
        <Grid.LayoutTransform>
            <ScaleTransform x:Name="gridZoom"/>
        </Grid.LayoutTransform>
    </Grid>
</Page>
